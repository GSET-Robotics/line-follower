  task main() {
    unsigned int c;

    SetSensorType(S1, SENSOR_TYPE_LOWSPEED);

    while (true) {

      c = SensorHTColorNum(S1);
      value = x - white;
      range = black - white;
      y = (2 * value / range) - 1;

      TextOut(0, 0 , NumToStr(y));
      ClearLine(LCD_LINE3);
      NumOut(10,LCD_LINE3,c);

      OnFwd(OUT_A, MOTOR_SPEED + VARIABLE_SPEED * y);
      OnFwd(OUT_C, MOTOR_SPEED + VARIABLE_SPEED * (-y));
    }
    Off(OUT_AC);
  }

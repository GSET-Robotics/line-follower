  task main() {

    // define variables
    int MOTOR_SPEED = 40;
    int black, white, x;
    
    // set up sensors
    SetSensorLight(S3);

    // calibrate white and black colors
    black = SensorRaw(S3);
    RotateMotor(OUT_C, 75, 360);
    Wait(1000);
    white = SensorRaw(S3);
    RotateMotor(OUT_C, -75, 360);

    // TextOut(0, LCD_LINE1, NumToStr(black));
    // TextOut(0, LCD_LINE2, NumToStr(white));

    Wait(1000);

    while (true) {
      // get x between 0 and 1 in white to black range
      x = SensorRaw(S3);
      x = (x - white) / (double) (black - white);
      TextOut(0, 0 , NumToStr(x));
      OnFwd(OUT_A, MOTOR_SPEED * x);
      OnFwd(OUT_C, MOTOR_SPEED * (1-x));
      Wait(10);
    }
    Off(OUT_AC);
  }
